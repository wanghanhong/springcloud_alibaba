<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.device.install.mapper.TBasePicMapper">

    <select id="basePicList" parameterType="com.smart.device.common.install.entity.TBasePic" resultType="com.smart.device.common.install.entity.TBasePic">
        SELECT * from t_base_pic t where t.delete_flag = 0
        <if test="vo.id != null ">
            and t.id = #{vo.id}
        </if>
        <if test="vo.companyName != null and vo.companyName != ''">
            and t.company_name like concat('%',#{vo.companyName},'%')
        </if>
        order by t.create_time desc
    </select>

</mapper>
