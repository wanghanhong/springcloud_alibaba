<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.device.install.mapper.inspection.TBaseFirefighterMapper">

    <select id="baseFirefighterList" parameterType="com.smart.device.common.install.entity.TBaseFirefighter" resultType="com.smart.device.common.install.entity.TBaseFirefighter">
        SELECT * from t_base_firefighter t where t.delete_flag = 0
        <if test="vo.id != null ">
            and t.id = #{vo.id}
        </if>
        <if test="vo.companyId != null ">
            and t.company_id = #{vo.companyId}
        </if>
        <if test="vo.name != null and vo.name != ''">
            and t.name like concat('%',#{vo.name},'%')
        </if>
        order by t.create_time desc
    </select>

    <select id="selectBaseFirefighter" parameterType="com.smart.device.common.install.entity.TBaseFirefighter" resultType="com.smart.device.common.install.entity.TBaseFirefighter">
        SELECT * from t_base_firefighter t where t.delete_flag = 0
        <if test="vo.name != null and vo.name != '' ">
            and t.name = #{vo.name}
        </if>
        <if test="vo.phone != null and vo.phone != '' ">
            and t.phone = #{vo.phone}
        </if>
        <if test="vo.cardId != null and vo.cardId != ''">
            and card_id = #{cardId}
        </if>
        order by t.create_time desc limit 1
    </select>

</mapper>
