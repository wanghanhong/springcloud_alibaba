<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.device.install.mapper.TBaseRegionMapper">

    <select id="selectProvinces" resultType="com.smart.device.common.install.entity.TBaseRegion"
            parameterType="java.lang.Integer">
        select *  from t_base_region t where t.REGION_LEVEL = 1
    </select>

    <select id="selectRegions" resultType="com.smart.device.common.install.entity.TBaseRegion"
            parameterType="java.lang.String">
        select * from t_base_region t
        <where>
            <if test="regionCode != null and regionCode != ''">
                t.PARENT_REGION_CODE = #{regionCode}
            </if>
        </where>
    </select>

    <select id="mapRegions" resultType="com.smart.device.common.install.entity.TBaseRegion" parameterType="java.lang.String">
        select * from t_base_region t
        <where>
            <if test="regionCode != null and regionCode != ''">
                t.region_code in ( ${regionCode} );
            </if>
        </where>
    </select>

    <select id="selectRegionsByCode" resultType="com.smart.device.common.install.entity.TBaseRegion" parameterType="java.lang.String">
        SELECT * from t_base_region t
        <where>
            <if test="province != null and province != ''">
                or t.REGION_CODE = #{province}
            </if>
            <if test="city != null and city != ''">
                or t.REGION_CODE = #{city}
            </if>
            <if test="county != null and county != ''">
                or t.REGION_CODE = #{county}
            </if>
            <if test="town != null and town != ''">
                or t.REGION_CODE = #{town}
            </if>
        </where>
        ORDER BY t.REGION_LEVEL asc
    </select>


</mapper>
