<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.device.access.mapper.TDeviceCamerasMapper">

    <select id="findCamerasDevice" resultType="java.lang.Long">
        SELECT imei from t_device_Cameras
    </select>

    <select id="findCamerasIds" resultType="java.lang.Long">
        SELECT id from t_device_Cameras
    </select>
    
    <select id="selectDeviceCameras" parameterType="com.smart.device.common.access.entity.vo.DeviceBaseVo" resultType="com.smart.device.common.access.entity.vo.DeviceBaseVo">
        select * from t_device_cameras t where t.delete_flag = 0
        <if test="vo.id != null ">
            and t.id = #{vo.id}
        </if>
        <if test="vo.sn != null ">
            and t.sn = #{vo.sn}
        </if>
        order by t.create_time limit 1
    </select>

</mapper>
