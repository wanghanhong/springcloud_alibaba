<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.brd.manage.base.mapper.TAlarmRulesMapper">


    <select id="tAlarmRulesList" parameterType="com.smart.brd.manage.base.entity.TAlarmRules" resultType="com.smart.brd.manage.base.entity.TAlarmRules">
        SELECT * from t_alarm_rules t where t.delete_flag = 0
        <if test="vo.equipmentType != null and vo.equipmentType != '' ">
            and t.equipment_type = #{vo.equipmentType}
        </if>
        <if test="vo.suitable != null and vo.suitable != '' ">
            and t.suitable like concat('%',#{vo.suitable},'%')
        </if>
        <if test="vo.status != null and vo.status != '' ">
            and t.status = #{vo.status}
        </if>
        <if test="vo.deptIds != null and vo.deptIds != '' ">
            and t.dept_id in (${vo.deptIds})
        </if>
        ORDER BY t.create_time desc
    </select>


</mapper>
