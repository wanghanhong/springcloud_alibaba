<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.brd.manage.base.mapper.TDCamerasConfigMapper">


    <select id="tDCamerasConfigList" parameterType="com.smart.brd.manage.base.entity.TDCamerasConfig" resultType="com.smart.brd.manage.base.entity.vo.DeviceVo">
        SELECT * from t_d_cameras_config t where t.delete_flag = 0
        <if test="vo.deptIds != null and vo.deptIds != '' ">
            and t.dept_id in (${vo.deptIds})
        </if>
        <if test="vo.userId != null ">
            and t.user_id = #{vo.userId}
        </if>
        ORDER BY t.sort_no
    </select>


</mapper>
