<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.card.manage.mapper.TCardVoiceMapper">


    <select id="tCardVoiceList" parameterType="com.smart.card.manage.entity.TCardVoice" resultType="com.smart.card.manage.entity.TCardVoice">
        SELECT * from t_card_voice t where t.delete_flag = 0
        <if test="vo.msisdn != null ">
            and t.msisdn like concat('%',#{vo.msisdn},'%')
        </if>
        <if test="vo.startTime != null and vo.startTime != '' ">
            and t.begin_time &gt;= #{vo.startTime}
        </if>
        <if test="vo.endTime != null and vo.endTime != '' ">
            and t.begin_time &lt;= #{vo.endTime}
        </if>
        <if test="vo.deptIds != null and vo.deptIds != '' ">
            and t.dept_id in (${vo.deptIds})
        </if>
    </select>


</mapper>
