<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smart.card.manage.mapper.TCardUseCountMapper">


    <select id="tCardUseCountList" parameterType="com.smart.card.manage.entity.TCardUseCount" resultType="com.smart.card.manage.entity.TCardUseCount">
        SELECT * from t_card_use_count t where t.delete_flag = 0
        <if test="vo.msisdn != null ">
            and t.msisdn like concat('%',#{vo.msisdn},'%')
        </if>
        <if test="vo.billDate != null  ">
            and t.bill_date = #{vo.billDate}
        </if>
        <if test="vo.deptIds != null and vo.deptIds != '' ">
            and t.dept_id in (${vo.deptIds})
        </if>
    </select>


</mapper>
